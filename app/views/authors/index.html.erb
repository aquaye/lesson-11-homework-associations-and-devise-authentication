<h1>Authors</h1>

<% @authors.each do |author| %>
  <%= link_to author.name, author_path(author) %>
  <%= link_to "Edit", edit_author_path(author) %>
  <%= link_to "Delete", author_path(author), method: :delete, data: { confirm: "Are you sure you want to delete this author?"} %>
  <br />
<% end %>

<%= link_to "Create New Author", new_author_path %>

