<h1>Tags</h1>

<% @tags.each do |tag| %>
  <%= link_to tag.name, tag_path(tag) %>
  <%= link_to "Edit", edit_tag_path(tag) %>
  <%= link_to "Delete", tag_path(tag), method: :delete, data: { confirm: "Are you sure you want to delete this tag?"} %>
  <br />
<% end %>

<%= link_to "Create New Tag", new_tag_path %>

